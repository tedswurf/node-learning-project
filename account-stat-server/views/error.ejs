<%- include('partials/header', { title: 'Error' }) %>

<h1 style="color: #d32f2f;">Error</h1>

<div style="background-color: #ffebee; padding: 20px; border-radius: 4px; border-left: 4px solid #d32f2f;">
    <h2 style="margin-top: 0; color: #c62828;"><%= message || 'An error occurred' %></h2>

    <% if (error) { %>
        <p style="color: #666; font-family: monospace; white-space: pre-wrap;"><%= error %></p>
    <% } %>
</div>

<p style="margin-top: 20px;">
    <a href="/api/accounts/view" style="color: #4CAF50; text-decoration: none; font-weight: 600;">← Back to Accounts</a>
</p>

<%- include('partials/footer') %>
